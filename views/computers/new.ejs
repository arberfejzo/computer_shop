    <section>
        <div class="card text-center" style="border: none; margin-bottom: unset; padding-bottom: unset;">
            <div class="card-body" style="padding-bottom: unset;">
                <h5 class="card-title">Shto kompjuter</h5>
                <p class="card-text">Ploteso fushat per te shtuar nje kompjuter ne databaze</p>
            </div>
        </div>
        <hr>

        <div class="container mt-3 px-5 mb-5" style="max-width: 500px;">
            <form action="/computers" method="POST" enctype="multipart/form-data">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="marka">Marka</span>
                    <input type="text" id="marka" name="computer[marka]" class="form-control" placeholder="marka"
                        aria-label="marka" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="modeli">Modeli</span>
                    <input type="text" id="modeli" name="computer[modeli]" class="form-control" placeholder="modeli"
                        aria-label="modeli" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="versioni">Versioni</span>
                    <select class="form-select" name="computer[versioni]" id="versioni" aria-label="Versioni">
                        <!-- <option selected>Zgjidh</option> -->
                        <option value="Desktop">Desktop</option>
                        <option value="Laptop">Laptop</option>
                        <option value="All-in-One">All-in-One</option>
                    </select>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="cpu">CPU</span>
                    <input type="text" name="computer[cpu]" id="cpu" class="form-control" placeholder="CPU"
                        aria-label="CPU" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="grafika">Grafika</span>
                    <input type="text" id="grafika" name="computer[grafika]" class="form-control"
                        placeholder="karta grafike" aria-label="karta grafike" aria-describedby="basic-addon1">
                </div>

                <hr>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="memorjaRam">RAM</span>
                    <input type="number" id="memorjaRam" name="computer[memorjaRam]" class="form-control"
                        placeholder="memorja RAM" aria-label="RAM" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <select name="computer[tipiRam]" id="tipiRam" class="form-select" aria-label="tipi RAM">
                        <!-- <option selected>Tipi RAM</option> -->
                        <option value="DDR3">DDR3</option>
                        <option value="DDR4">DDR4</option>
                        <option value="DDR5">DDR5</option>
                    </select>
                </div>

                <hr>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="memorjaDisk">Memorja</span>
                    <input type="number" id="memorjaDisk" name="computer[memorjaDisk]" class="form-control"
                        placeholder="memorja disk" aria-label="memorja" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <select name="computer[tipiDisk]" id="tipiDisk" class="form-select" aria-label="tipi disk">
                        <!-- <option selected>Tipi disk</option> -->
                        <option value="HDD">HDD</option>
                        <option value="SSD">SSD</option>
                    </select>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="memorjaDisk2">Memorja</span>
                    <input type="number" id="memorjaDisk2" name="computer[memorjaDisk2]" class="form-control"
                        placeholder="memorja sekondare" aria-label="memorja sekondare" aria-describedby="basic-addon1">
                </div>

                <div class="input-group mb-3">
                    <select name="computer[tipiDisk2]" id="tipiDisk2" class="form-select" aria-label="tipi disk2">
                        <!-- <option selected>Tipi disk</option> -->
                        <option value="HDD">HDD</option>
                        <option value="SSD">SSD</option>
                    </select>
                </div>

                <hr>

                <div class="input-group mb-3">
                    <span class="input-group-text">Cmimi</span>
                    <input type="number" name="computer[cmimi]" id="cmimi" class="form-control"
                        aria-label="cmimi ne euro">
                    <span class="input-group-text">€</span>
                </div>

                <div class="input-group mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="true" id="workstation"
                            name="computer[workstation]" value="true" id="workstation">
                        <label class="form-check-label" for="workstation">
                            Workstation
                        </label>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="oferte" name="computer[oferte]" value="true">
                        <label class="form-check-label" for="oferte">
                            Oferte
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Zgjidh foton</label>
                    <input class="form-control" type="file" name="image" id="image">
                </div>

                <div class="input-group">
                    <span class="input-group-text">Pershkrimi</span>
                    <textarea id="teks" name="computer[tekst]" class="form-control"
                        aria-label="With textarea"></textarea>
                </div>
                <div class="row align-items-center mt-5">
                    <input type="submit" class="btn btn-success">
                </div>
            </form>
        </div>
    </section>


