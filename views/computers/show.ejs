<body>

    <!-- navar -->
    <%- include('../partials/navbar') %>
    <!-- flash -->
    <div class="container mt-3">
        <%- include('../partials/flash') %>
    </div>

    <section>
        <div class="container mt-5">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="../uploads/<%=computer.image%>" class="img-fluid" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= computer.marka %>
                                    <%= computer.modeli %>
                            </h5>
                            <p class="card-text"><%= computer.tekst %> </p>
                            <p class="fs-3 fw-bold fst-italic text-danger">€ <%= computer.cmimi %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Të dhëna teknike
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                        data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <ul>
                                <li>CPU: <%= computer.cpu %>
                                </li>
                                <li>RAM: <%= computer.tipiRam %> <%= computer.memorjaRam %> GB
                                </li>
                                <li>Disku primar: <%= computer.tipiDisk %> <%= computer.memorjaDisk %> GB</li>
                                <% if (computer.memorjaDisk2) { %>
                                    <li>Disku sekondar: <%= computer.tipiDisk2 %> <%= computer.memorjaDisk2 %> GB</li>
                                <% } %>
                                <% if (computer.grafika) { %>
                                    <li>Karta grafike: <%= computer.grafika %></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            Opsione
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo"
                        data-bs-parent="#accordionFlushExample">
                        <div class="container-sm" style="max-width: 400px;">
                            <div class="accordion-body">
                                <div class="accordion-body">
                                    <div class="input-group mb-3">
                                        <div class="input-group-text">
                                            <input class="form-check-input mt-0" type="checkbox" value=""
                                                aria-label="Checkbox for following text input"><span class="ms-2">Shto
                                                RAM +</span>
                                        </div>
                                        <select class="form-select" aria-label="Default select example">
                                            <!-- <option selected>Open this select menu</option> -->
                                            <option value="1">4 GB</option>
                                            <option value="2">8 GB</option>
                                        </select>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-text">
                                            <input class="form-check-input mt-0" type="checkbox" value=""
                                                aria-label="Checkbox for following text input"><span class="ms-2">Shto
                                                SSD +</span>
                                        </div>
                                        <select class="form-select" aria-label="Default select example">
                                            <!-- <option selected>Open this select menu</option> -->
                                            <option value="1">250 GB</option>
                                            <option value="2">500 GB</option>
                                            <option value="3">1 TB</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-center mt-3 mb-5"><button type="button"
                            class="btn btn-outline-dark">Shto
                            në
                            shportë</button></div>
                </div>
    </section>



