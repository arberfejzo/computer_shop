<body>
    <!-- navar -->
    <%- include('../partials/navbar') %>
    <!-- flash -->
    <div class="container mt-3">
        <%- include('../partials/flash') %>
    </div>

    <div class="card text-center" style="border: none; margin-bottom: unset; padding-bottom: unset;">
        <div class="card-body" style="padding-bottom: unset;">
            <h5 class="card-title">Lista e kompjuterave</h5>
            <a href="/computers/new" class="btn btn-primary">Shto kompjuter</a>
        </div>
    </div>
    <hr>

    <!-- tabela -->
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Marka</th>
                    <th scope="col">Modeli</th>
                    <th scope="col">CPU</th>
                    <th scope="col">RAM</th>
                    <th scope="col">HDD</th>
                    <th scope="col">Cmimi</th>
                    <th scope="col">----</th>
                    <th scope="col">----</th>
                </tr>
            </thead>
            <tbody>
                <% let i=1 %>
                    <% for (let computer of computers) {%>
                        <tr>
                            <th scope="row">
                                <%= i %>
                            </th>
                            <td>
                                <%= computer.marka %>
                            </td>
                            <td>
                                <%= computer.modeli %>
                            </td>
                            <td>
                                <%= computer.cpu %>
                            </td>
                            <td>
                                <%= computer.memorjaRam %>
                            </td>
                            <td>
                                <%= computer.memorjaDisk %>
                            </td>
                            <td>
                                € <%= computer.cmimi %>
                            </td>
                            <td>
                                <form action="/computers/<%=computer._id%>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-sm btn-danger m-1">Fshi</button>
                                </form>
                            </td>
                            <td>
                                <a href="/computers/<%=computer._id%>/edit" class="btn btn-warning" role="button">Edito</a>
                            </td>
                        </tr>
                        <% i=i+1 %>
                            <% } %>
            </tbody>
        </table>
    </div>
